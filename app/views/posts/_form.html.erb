<div class="new-post span12">
  <%= form_for(@post) do |f| %>
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.text_field :title, :placeholder => "Title here" %>
    </div>
    
    <div class="field">
      <%= f.text_area :content, :placeholder => "Write your entry here"  %>
    </div>

    <div class="field">
      <%= f.label :category, "Which category does this entry belong in?" %> <br/>
      <%= f.collection_select :category_id, Category.all, :id, :title %>
    </div>


    <div class="actions">
      <%= f.submit "Publish", :class => "btn btn-large", :id => "publish" %>
    </div>
  <% end %>
</div>
